{
  "name": "flutter-builder",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "flutter-builder/*",
    "flutter-daemon/*",
    "flutter-preview/*"
  ],
  "scripts": {
    "build": "yarn turbo run build --filter=!@examples/*",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/assert": "^1.5.6",
    "@types/jest": "^28.1.6",
    "@types/node": "latest",
    "jest": "^26.5.2",
    "tsup": "^6.5.0",
    "turbo": "^1.7.2",
    "typescript": "^4.9.5"
  }
}